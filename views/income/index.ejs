<div id="app">
    <header>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <h3 class="title">
                        <%= title %>
                    </h3>
                </div>
                <div class="navbar-text navbar-right" style="margin-right: 0">
                    <form class="form-inline" method="GET" id="search-form">
                        <span>劇場</span>&nbsp;
                        <select name="theaterCd" class="form-control" v-model="theaterCd">
                            <option value="" disabled selected>選択してください</option>
                            <% for (const theater of theaters) { %>
                                <option value="<%= theater.theaterCd %>"><%= theater.theaterName %></option>
                            <% } %>
                        </select>
                        <span class="separator"></span>
                        <select name="year" class="form-control" v-model="date.year">
                            <option v-for="year in _.range(new Date().getFullYear() - 1, new Date().getFullYear() + 2)" :value="year">{{ year }}</option>
                        </select>
                        <span>年</span>&nbsp;
                        <select name="month" class="form-control" v-model="date.month">
                            <option v-for="month in 12" :value="padZero(month)">{{ padZero(month) }}</option>
                        </select>
                        <span>月</span>&nbsp;
                        <select name="date" class="form-control" v-model="date.date">
                            <option v-for="date in calculateDate(date.year, date.month)" :value="date">{{ date }}</option>
                        </select>
                        <span>日</span>&nbsp;
                        <button class="btn btn-primary form-control" type="button" @click="search">検索</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid" v-if="incomes.length > 0" style="display: none; padding-left: 0px; padding-right: 0px" :style="{ display: initialized ? 'block' : 'none' }">
        <div v-if="incomes.length > 0">
            <div class="info-container">
                <div class="additional-info">
                    <span>
                        <b>劇場：</b>{{ incomes[0].theaterName }}
                    </span>
                    <span>
                        <b>日付：</b>{{ incomes[0].date.slice(0, 10) }}
                    </span>
                </div>
            </div>
        </div>
        <div style="margin-bottom: 120px">
            <div class="data-table">
                <div class="table-responsive table-bordered table-narrow">
                    <table class="table">
                        <thead>
                            <tr>
                                <th></th>
                                <th style="min-width: 75px">細目</th>
                                <th style="min-width: 140px">科目分類</th>
                                <th style="min-width: 160px">科目</th>
                                <th style="min-width: 180px">細目</th>
                                <th style="min-width: 75px">数量</th>
                                <th style="min-width: 95px">金額</th>
                                <th style="min-width: 140px">相手細目</th>
                                <th style="min-width: 260px">備考</th>
                                <th style="min-width: 480px">作品</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr v-for="(income, index) in incomes" :class="{ error: income.isValid === false }" v-model="income.isValid">
                                <td style="text-align: center; padding-right: 10px"><button class="btn btn-danger btn-small" @click="deleteRow(index)"><i class="far fa-trash-alt"></i></button></td>
                                <td>
                                    <input
                                        type="text"
                                        v-model="income.subjectDetailCd"
                                        class="form-control"
                                        :name="`subjectDetailCd${index}`"
                                        @change="searchSubjectDetailByCode(income.subjectDetailCd, index)"
                                    >
                                </td>
                                <td>
                                    <select
                                        :name="`subjectGroupCd${index}`"
                                        v-model="income.subjectGroupCd"
                                        class="form-control"
                                        @change="resetSubject(true, true, index)"
                                    >
                                        <option value="null" disabled selected>--</option>
                                        <option
                                            :value="subjectGroup.subjectGroupCd"
                                            v-for="subjectGroup in subjectGroups"
                                        >
                                        {{ subjectGroup.subjectGroupName }}
                                        </option>
                                    </select>
                                </td>
                                <td>
                                    <select
                                        :name="`subjectCd${index}`"
                                        v-model="income.subjectCd"
                                        class="form-control"
                                        @change="resetSubject(false, true, index)"
                                    >
                                        <option value="null" disabled selected>--</option>
                                        <option
                                            :value="subject.subjectCd"
                                            v-for="subject in generateSubjects(income.subjectGroupCd, index)"
                                        >
                                        {{ subject.subjectName }}
                                        </option>
                                    </select>
                                </td>
                                <td>
                                    <select
                                        :name="`subjectDetail${index}`"
                                        v-model="income.subjectDetailCd"
                                        class="form-control"
                                    >
                                        <option value="null" disabled selected>--</option>
                                        <option
                                            :value="subjectDetail.subjectDetailCd"
                                            v-for="subjectDetail in generateSubjectDetails(income.subjectCd, index)"
                                        >
                                        {{ subjectDetail.subjectDetailName }}
                                        </option>
                                    </select>
                                </td>
                                <td>
                                    <input
                                        type="text"
                                        v-model="income.quantity"
                                        class="form-control"
                                        :name="`quantity-${index}`"
                                        @input="parseNumberInput"
                                    >
                                </td>
                                <td>
                                    <input
                                        type="text"
                                        v-model="income.amount"
                                        class="form-control"
                                        :name="`amount-${index}`"
                                        @input="parseNumberInput"
                                    >
                                </td>
                                <td>
                                    <select :name="`opponentSubjectCd${index}`" v-model="income.opponentSubjectCd" class="form-control">
                                        <option value="">--</option>
                                        <option
                                            :value="subject.subjectDetailCd"
                                            v-for="subject in opponentSubjects"
                                        >
                                        {{ subject.subjectDetailName }}
                                        </option>
                                    </select>
                                </td>
                                <td><input :name="`note${index}`" type="text" v-model="income.note" class="form-control"></td>
                                <td>
                                    <select :name="`screeningWorkId${index}`" v-model="income.screeningWorkId" class="form-control">
                                        <option value="">--</option>
                                        <option
                                            :value="screeningWork.screeningWorkId"
                                            v-for="screeningWork in screeningWorks"
                                        >
                                        {{ screeningWork.screeningWorkName }}
                                        </option>
                                    </select>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="action-btn" v-if="!dateChanged || incomes.length > 0">
        <span class="add-btn" @click="addRow">
            <i class="fas fa-plus"></i>
        </span>
        <br>
        <button class="btn btn-primary btn-lg" style="width: 200px" v-if="incomes.length > 0" @click="submit">
            反映
        </button>
    </div>
    <div class="loading" :class="{ isLoading: loading.isLoading }">
        <!-- spinner -->
        <div class="lds-dual-ring"></div>
        {{ loading.message }}
    </div>
</div>
<%- contentFor('scripts') %>
